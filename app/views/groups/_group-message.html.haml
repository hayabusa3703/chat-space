.chat__side
  .chat__side__top
    .chat__side__usercontent
      .chat__side__username= current_user.name
      = link_to new_group_path do
        = fa_icon 'pencil-square-o', class: 'icon-num1'
      = link_to edit_user_registration_path(current_user) do
        = fa_icon 'cog', class: 'icon-num2'
  .chat__side__bottom
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .chat__side__bottom--groupname
          = group.name
        .chat__side__bottom--groupmessage
          = group.show_last_message
